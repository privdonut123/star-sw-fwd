<job  name="FwdJpsiGun"  simulateSubmission="false" nProcesses="100">
    <stdout URL="file:/gpfs01/star/pwg_tasks/FwdCalib/FZD/jpsi/log/log_$JOBID.log" />
    <stderr URL="file:/gpfs01/star/pwg_tasks/FwdCalib/FZD/jpsi/log/err_$JOBID.err" />

    <output fromScratch="*.fzd" toURL="file:/gpfs01/star/pwg_tasks/FwdCalib/FZD/jpsi/" />
    <!-- MUST be submitted from ALMA nodes -->
    <shell>singularity exec -e -B /direct -B /star -B /afs -B /gpfs -B /sdcc/lustre02 /cvmfs/star.sdcc.bnl.gov/containers/rhic_sl7.sif</shell>
    <command>
        echo "JOBINDEX = ${JOBINDEX}"
        echo "JOBID = ${JOBID}"
        ln -s StRoot/StFwdTrackMaker/macro/sim/ sim

        set SEED = `od -An -N3 -tu4 /dev/urandom | tr -d ' '`
        echo "RNG Seed: $SEED"

        starver SL24a
        echo root4star -b -q -l 'sim/jpsi.C( 1000, '"$SEED"' )'
        root4star -b -q -l 'sim/jpsi.C( 1000, '"$SEED"' )' 
        mv jpsi.fzd job_${JOBID}_fwd_jpsi.fzd
    </command>

    <SandBox>
        <Package>
            <File>file:./StRoot</File>
            <File>file:./.sl73_x8664_gcc485/</File>
        </Package>
    </SandBox>

    <Generator>
        <Location>/gpfs01/star/pwg_tasks/FwdCalib/FZD/jpsi/gen</Location>
    </Generator>
</job>
